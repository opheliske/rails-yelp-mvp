<div style="display: flex;">
  <div class="card" style="width: 18rem;">
    <img src="https://images.unsplash.com/photo-1537047902294-62a40c20a6ae?q=80&w=2835&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top" alt="img restaurant">
    <div class="card-body" style="height: 85px;">
      <h3 class="card-title"><%= @restaurant.name %></h3>
    </div>

    <ul class="list-group list-group-flush">
      <li class="list-group-item"><strong>🌎 Address:</strong> <%= @restaurant.address %></li>
      <li class="list-group-item"><strong>📞 Phone Number:</strong> <%= @restaurant.phone_number %></li>
      <li class="list-group-item"><strong>🍰 Category:</strong> <%= @restaurant.category %></li>
    </ul>
    <div class="card-body">
        <div>
          <h5>Reviews:</h5>
          <% @restaurant.reviews.each do |review| %>
          <div class="border p-3 rounded-start bg-warning-subtle">
            <p><strong>Rating:</strong> <%= review.rating %></p>
            <p><strong>Comment:</strong> <%= review.content %></p>
          </div>
          <!-- Ajoutez d'autres détails de l'avis selon vos besoins -->
        </div>
      <% end %>
    </div>
  </div>
</div>
